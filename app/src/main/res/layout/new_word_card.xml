<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    android:elevation="7dp"
    app:cardBackgroundColor="@color/primary_background_color">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/words_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tree"
            android:textSize="48sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="41% of 18 month olds use this word"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/words_title"/>

        <View
            android:id="@+id/saparator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/darker_background_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtext"
            android:layout_margin="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/how_to_use_word_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saparator"
            android:layout_margin="20dp"
             />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>