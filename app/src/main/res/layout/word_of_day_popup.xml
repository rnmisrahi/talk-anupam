<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent_black"
    android:padding="15dp">

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:foregroundGravity="center"
        android:layout_width="328dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@color/primary_background_color"
        tools:ignore="MissingPrefix"
        android:padding="10dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Tree"
            android:textSize="20sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:textColor="@color/Light_sea_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal"
            android:padding="10dp"/>


        <ImageView
            android:id="@+id/exit_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/groupppp1"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/goal_pop"
            android:text="@string/info"
            android:paddingBottom="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:background="@drawable/edit_text_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/info_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/info_title"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/info_title"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/questions_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/que"
            android:text="@string/questions"
            android:paddingBottom="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:background="@drawable/edit_text_line"
            app:layout_constraintStart_toStartOf="@+id/info_title"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/info_rv"
            android:layout_marginTop="20dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/questions_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/questions_title"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/info_title"/>


        <TextView
            android:id="@+id/activities_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/acti"
            android:text="@string/activities"
            android:paddingBottom="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:background="@drawable/edit_text_line"
            app:layout_constraintStart_toStartOf="@+id/info_title"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/questions_rv"
            android:layout_marginTop="20dp"
             />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activities_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/info_title"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/activities_title"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/our_fav_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/faivorite"
            android:text="@string/our_faves"
            android:paddingBottom="10dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:background="@drawable/edit_text_line"
            app:layout_constraintStart_toStartOf="@+id/info_title"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/activities_rv"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="20dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/our_fav_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/info_title"
            app:layout_constraintEnd_toEndOf="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/our_fav_title"
            android:layout_marginTop="10dp"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>