<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    android:elevation="7dp"
    app:cardBackgroundColor="@color/primary_background_color">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/words_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tree"
            android:textSize="48sp"
            fontPath="fonts/Avenir-Black.ttf"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="41% of 18 month olds use this word"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/words_title"
            android:paddingBottom="30dp"/>
        
        <ImageView
            android:id="@+id/plus_extend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/groupppp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>




    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>